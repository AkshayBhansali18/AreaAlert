<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/RegisterEmail"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/RegisterEmail"
        android:hint="  Enter the Email"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:id="@+id/RegisterEmailValue"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/RegisterName"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/RegisterEmail"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_toRightOf="@+id/RegisterName"
        android:layout_below="@+id/RegisterEmailValue"
        android:hint="  Enter the Name"
        android:id="@+id/RegisterNameValue"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phonenumber"
        android:text="Enter the Phone Number"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/RegisterNameValue"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dp"/>

    <EditText
        android:id="@+id/PhoneNumber"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonenumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="15dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="17dp"
        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:hint="Enter the Phone Number Here"
        android:textAlignment="center" />

    <Button
        android:id="@+id/Verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PhoneNumber"
        android:layout_marginTop="121dp"
        android:background="#000"
        android:text="Send Verification code"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/codeverify"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_below="@+id/Verify"
        android:layout_marginTop="41dp"
        android:text="Enter the Code Sent"
        android:textAlignment="center"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeverify"
        android:layout_marginTop="25dp"
        android:hint="Enter the Verification Code Here"
        android:textAlignment="center" />

    <Button
        android:id="@+id/CodeVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Code"
        android:layout_marginTop="9dp"
        android:background="#000"
        android:text="Verify Code"
        android:textColor="#fff" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CodeVerify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>


</RelativeLayout>